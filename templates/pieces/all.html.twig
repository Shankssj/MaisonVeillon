{% extends 'base.html.twig' %}

{% block title %}Liste des pièces
{% endblock %}

{% block body %}
	<div class="jumbotron text-center">
		<h1 class="display-5">Mes pièces</h1>
		<p class="lead">La liste de toutes les pièces enregistrées</p>
	</div>

	<div class="container mt-4">
		<div class="row g-4">
			{% for piece in lesPieces %}
				{% set photos = piece.getPhotos() %}

				<div class="col-md-4">
					<div class="card h-100 shadow-sm border-0">
						{% if photos is not empty %}
							<img src="{{ photos[0].getLienPhoto() }}" class="card-img-top" alt="Photo de {{ piece.getNomPiece() }}">
						{% else %}
							<img src="{{ asset('images/no-image.png') }}" class="card-img-top" alt="Pas d'image">
						{% endif %}

						<div class="card-body text-center">
							<h5 class="card-title text-primary">{{ piece.getNomPiece() }}</h5>
							<p class="card-text text-muted">
								{{ piece.getDescriptionPiece()|slice(0, 100) }}
								{% if piece.getDescriptionPiece()|length > 100 %}...
								{% endif %}
							</p>
						</div>

						<div class="card-footer bg-white border-0">
							<div class="d-grid gap-2">
								<a href="{{ path('app_pieces', {id_piece: piece.getId()}) }}" class="btn btn-primary btn-sm text-white">
									<i class="bi bi-eye"></i>
									Voir
								</a>
								<a href="{{ path('app_editPiece', {id_piece: piece.getId()}) }}" class="btn btn-warning btn-sm text-white">
									<i class="bi bi-pencil"></i>
									Modifier
								</a>
								<a href="{{ path('app_deletePiece', {id_piece: piece.getId()}) }}" class="btn btn-danger btn-sm">
									<i class="bi bi-trash"></i>
									Supprimer
								</a>
							</div>
						</div>
					</div>
				</div>

			{% else %}
				<div class="col-12 text-center text-muted">
					<p>Aucune pièce enregistrée</p>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
